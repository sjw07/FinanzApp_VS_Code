<Window x:Class="FinanzApp.WPF.Views.MonthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monat" Height="400" Width="600" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="<" Width="30" Click="PrevMonth_Click" />
            <TextBlock x:Name="Header" Margin="10,0" FontWeight="Bold" />
            <Button Content=">" Width="30" Click="NextMonth_Click" />
        </StackPanel>
        <DataGrid x:Name="EntriesGrid" Grid.Row="1" Margin="10"/>
        <TextBlock x:Name="BalanceText" Grid.Row="2" HorizontalAlignment="Right" Margin="10" />
    </Grid>
</Window>
