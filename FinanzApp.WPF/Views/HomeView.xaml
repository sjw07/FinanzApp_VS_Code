<Window x:Class="FinanzApp.WPF.Views.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="300" Width="400" Background="DarkGray">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Monatsübersicht" Width="150" Margin="0,0,0,10" Click="Month_Click" />
        <Button Content="Jahresübersicht" Width="150" Margin="0,0,0,10" Click="Year_Click" />
        <Button Content="Abmelden" Width="150" Click="Logout_Click" />
    </StackPanel>
</Window>
