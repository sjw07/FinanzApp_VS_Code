<Window x:Class="FinanzApp.WPF.Views.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinanzApp" Height="300" Width="400" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="LoginButton" Content="Anmelden" Width="150" Margin="0,0,0,10" Click="LoginButton_Click"/>
            <Button x:Name="ExitButton" Content="Beenden" Width="150" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
