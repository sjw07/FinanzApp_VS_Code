<Window x:Class="FinanzApp.WPF.MonthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MonatsÃ¼bersicht" Height="450" Width="800">
    <DockPanel Margin="10">
        <TextBox x:Name="SearchBox" DockPanel.Dock="Top" Margin="0,0,0,10"
                 TextChanged="SearchBox_TextChanged" />
        <ListView ItemsSource="{Binding FilteredEntries}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Datum" Width="120" DisplayMemberBinding="{Binding Datum, StringFormat=\"{0:dd.MM.yyyy}\"}" />
                    <GridViewColumn Header="Betrag" Width="80" DisplayMemberBinding="{Binding Betrag}" />
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
