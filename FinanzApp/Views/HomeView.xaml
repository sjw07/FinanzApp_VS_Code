<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzApp.HomeView"
             BackgroundImageSource="backgroundimage.png"
             Opacity="0.5">
    <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Button x:Name="MonthButton" Text="Monatsübersicht" Clicked="OnMonthClicked" TextColor="White"/>
        <Button x:Name="YearButton" Text="Jahresübersicht" Clicked="OnYearClicked" TextColor="White"/>
        <Button x:Name="LogoutButton" Text="Abmelden" Clicked="OnLogoutClicked" TextColor="White" BackgroundColor="Red"/>
    </VerticalStackLayout>
</ContentPage>
