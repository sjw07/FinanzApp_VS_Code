<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzApp.LoginView">
    <Grid>
        <Image Source="backgroundimage.png" Aspect="AspectFill" Opacity="0.5" />
        <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Entry x:Name="usernameEntry" Placeholder="Benutzername"/>
            <Entry x:Name="passwordEntry" Placeholder="Passwort" IsPassword="True"/>
            <Button Text="Anmelden"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontAttributes="Bold"
                    WidthRequest="200"
                    Clicked="OnLoginClicked"/>
            <Button Text="Registrierung"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    FontAttributes="Bold"
                    WidthRequest="200"
                    Clicked="OnRegisterClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
