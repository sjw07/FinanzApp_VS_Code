<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzApp.MonthView"
             BackgroundImageSource="backgroundimage.png"
             Opacity="0.5">
    <VerticalStackLayout>
        <Label Text="MonatsÃ¼bersicht"
               FontAttributes="Bold"
               FontSize="18"
               HorizontalOptions="Center" />
        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
            <CollectionView x:Name="EntriesView"
                           VerticalOptions="FillAndExpand">
                <CollectionView.Header>
                    <Grid Padding="5" ColumnDefinitions="*,*,*" BackgroundColor="LightGray">
                        <Label Text="Datum" />
                        <Label Text="Betrag" Grid.Column="1" />
                        <Label Text="Name" Grid.Column="2" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnDefinitions="*,*,*">
                            <Label Text="{Binding Datum, StringFormat='{0:dd.MM.yyyy}'}" />
                            <Label Text="{Binding Betrag}" Grid.Column="1" />
                            <Label Text="{Binding Name}" Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
