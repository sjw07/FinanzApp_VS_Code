<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzApp.MonthView"
             BackgroundImageSource="backgroundimage.png"
             Opacity="0.5">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,10" HorizontalOptions="Center">
            <Button Text="&#x276E;" Clicked="OnPrevMonthClicked" FontSize="16" />
            <Label x:Name="TitleLabel" Grid.Column="1"
                   FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Center" />
            <Button Text="&#x276F;" Grid.Column="2" Clicked="OnNextMonthClicked" FontSize="16" />
        </Grid>

        <Grid ColumnDefinitions="3*,1*" ColumnSpacing="10" VerticalOptions="FillAndExpand">
            <ScrollView Grid.Column="0" Orientation="Vertical" VerticalOptions="FillAndExpand">
                <CollectionView x:Name="EntriesView" VerticalOptions="FillAndExpand">
                    <CollectionView.Header>
                        <Grid Padding="3" ColumnDefinitions="*,*,*" BackgroundColor="LightGray">
                            <Label Text="Datum" FontSize="12" />
                            <Label Text="Betrag" Grid.Column="1" FontSize="12" />
                            <Label Text="Name" Grid.Column="2" FontSize="12" />
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="3" ColumnDefinitions="*,*,*">
                                <Label Text="{Binding Datum, StringFormat='{0:dd.MM.yyyy}'}" FontSize="12" />
                                <Label Text="{Binding Betrag}" Grid.Column="1" FontSize="12" />
                                <Label Text="{Binding Name}" Grid.Column="2" FontSize="12" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>

            <VerticalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Start">
                <Button Text="Neuer Eintrag" Clicked="OnNewEntryClicked" />
                <Button Text="Eintrag &#228;ndern" Clicked="OnEditEntryClicked" />
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
