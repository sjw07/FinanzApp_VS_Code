<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FinanzApp.ViewModels"
             x:Class="FinanzApp.Views.MonthView"
             Title="Mai 2025">
    <ContentPage.BindingContext>
        <viewModels:MonthViewModel />
    </ContentPage.BindingContext>
    <CollectionView ItemsSource="{Binding Items}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="350">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="120,*,90" Padding="4">
                    <Label Grid.Column="0" Text="{Binding Date, StringFormat='{0:dd.MM}'}" />
                    <Label Grid.Column="1" Text="{Binding Name}" />
                    <Label Grid.Column="2"
                           Text="{Binding Amount, StringFormat='{}{0:F2} â‚¬'}"
                           TextColor="{Binding Amount, Converter={StaticResource AmountToColorConverter}}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
