<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzApp.MonthView">
    <Grid>
        <Image Source="backgroundimage.png" Aspect="AspectFill" Opacity="0.5" />
        <VerticalStackLayout>
        <Grid ColumnDefinitions="50,*,50" ColumnSpacing="75" Margin="0,10" HorizontalOptions="Center">
            <Button Text="&#x276E;" Clicked="OnPrevMonthClicked" FontSize="16" />
            <Label x:Name="TitleLabel" Grid.Column="1"
                   FontAttributes="Bold"
                   FontSize="18"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            <Button Text="&#x276F;" Grid.Column="2" Clicked="OnNextMonthClicked" FontSize="16" />
        </Grid>

        <Grid ColumnDefinitions="3*,1*" ColumnSpacing="10" VerticalOptions="Fill">
            <Border Grid.Column="0" Margin="40,0,0,0" Stroke="Black" StrokeThickness="2" BackgroundColor="#0DD3D3D3">
                <ScrollView Orientation="Vertical" VerticalOptions="Fill">
                    <CollectionView x:Name="EntriesView" VerticalOptions="Fill" SelectionMode="Single">
                        <CollectionView.Header>
                            <Grid Padding="3" ColumnDefinitions="*,*,*" BackgroundColor="LightGray">
                                <Label Text="Datum" FontSize="14" FontAttributes="Bold" TextColor="Black">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSortByDate" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Label Text="Betrag" Grid.Column="1" FontSize="14" FontAttributes="Bold" TextColor="Black">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSortByAmount" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Label Text="Name" Grid.Column="2" FontSize="14" FontAttributes="Bold" TextColor="Black">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnSortByName" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </CollectionView.Header>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="ItemGrid" Padding="3" ColumnDefinitions="*,*,*">
                                    <Label x:Name="DateLabel"
                                           Text="{Binding Datum, StringFormat='{0:dd.MM.yyyy}'}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="Black" />
                                    <Label x:Name="AmountLabel"
                                           Text="{Binding Betrag}"
                                           Grid.Column="1"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="Black" />
                                    <Label x:Name="NameLabel"
                                           Text="{Binding Name}"
                                           Grid.Column="2"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="Black" />
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal">
                                                <VisualState.Setters>
                                                    <Setter TargetName="DateLabel" Property="TextColor" Value="Black" />
                                                    <Setter TargetName="AmountLabel" Property="TextColor" Value="Black" />
                                                    <Setter TargetName="NameLabel" Property="TextColor" Value="Black" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter TargetName="ItemGrid" Property="BackgroundColor" Value="LightBlue" />
                                                    <Setter TargetName="DateLabel" Property="TextColor" Value="DarkOrange" />
                                                    <Setter TargetName="NameLabel" Property="TextColor" Value="DarkOrange" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Border>

            <VerticalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                <Button Text="Neuer Eintrag" Clicked="OnNewEntryClicked"
                        BackgroundColor="LightGreen" TextColor="White" FontAttributes="Bold" />
                <Button Text="Eintrag &#228;ndern" Clicked="OnEditEntryClicked"
                        BackgroundColor="Orange" TextColor="White" FontAttributes="Bold" />
            </VerticalStackLayout>
        </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
