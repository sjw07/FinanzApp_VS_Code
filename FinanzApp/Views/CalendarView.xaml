        <Image Source="backgroundimage.png" Aspect="AspectFill" Opacity="0.5" />
        <VerticalStackLayout>
            <Grid ColumnDefinitions="50,*,50" ColumnSpacing="0" Margin="0,10" HorizontalOptions="Center">
                <Button Text="&#x276E;" Clicked="OnPrevMonthClicked" FontSize="16" />
