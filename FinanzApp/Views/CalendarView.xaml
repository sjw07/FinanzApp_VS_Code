                <Button Text="&#x276F;" Grid.Column="2" Clicked="OnNextMonthClicked" FontSize="16" />
            </Grid>
            <ScrollView>
                <Grid x:Name="CalendarGrid" ColumnSpacing="2" RowSpacing="2" />
            </ScrollView>
